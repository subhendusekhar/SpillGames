package src.GLP{	import src.GLP.GLPDirector;		import flash.display.MovieClip;	import flash.events.Event;	public class GLPDirectorCaller extends MovieClip	{		// Singleton variable for this class		private static var m_sharedCaller:GLPDirectorCaller;				// No one should "new" this class, better to refer to singleton		public function GLPDirectorCaller()		{		}				// Get method for singleton variable		public static function sharedDirectorCaller():GLPDirectorCaller		{			if(m_sharedCaller == null)			{				m_sharedCaller = new GLPDirectorCaller();			}			return m_sharedCaller;		}				// Starts the main loop of this application		public function startMainLoop():void		{			addEventListener(Event.ENTER_FRAME, doCaller);		}				// Method called everytime a MovieClip enters a new frame		private function doCaller(e:Event):void		{			GLPDirector.sharedDirector().mainLoop();		}	}}