package src.elements{	import src.GLP.GLPScene;	import flash.events.MouseEvent;	import src.game.SurgeryStep;	import src.game.GameLogic;	import src.GLP.AnimationList;	import flash.text.TextField;	import com.spilgames.bs.comps.LocalizedTextField;	import src.game.SpilAPIManager;	public class NurseMessages extends GLPScene	{		public var textBox1:TextField;		public function NurseMessages()		{			getChildByName("m_continueButton").addEventListener(MouseEvent.CLICK, continueToNextScene);						var tf:TextField = TextField(getChildByName("textBox1"));			tf.mouseEnabled = false;		}		private function continueToNextScene(ev:MouseEvent)		{			var currentScene:SurgeryStep = GameLogic.sharedGameLogic().getCurrentScene();			GameLogic.sharedGameLogic().showSceneByName(currentScene.getProperties().nextSceneName);		}				public function setText(text:String)		{			if(SpilAPIManager.sharedSpilAPI().isApiReady())			{				if(textBox1 != null)				{					textBox1.text = text;					SpilAPIManager.sharedSpilAPI().localizeTextField(textBox1);				}			}			else			{				if(textBox1 != null)				{					textBox1.text = text;				}			}		}				public function setContinueButtonVisible(visible:Boolean)		{			getChildByName("m_continueButton").visible = visible;		}	}}