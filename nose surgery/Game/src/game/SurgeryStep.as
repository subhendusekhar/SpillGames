package src.game {	import src.GLP.GLPScene;	import flash.errors.EOFError;	import flash.utils.getQualifiedClassName;	import src.GLP.GMGDebugger;		public class SurgeryStep extends GLPScene{				private var m_properties:SurgeryStepProperties;				public function SurgeryStep() {			for(var i:uint = 0; i < numChildren; i++)			{				if(getChildAt(i) is SurgeryStepProperties)				{					m_properties = SurgeryStepProperties(getChildAt(i));				}			}		}				public function getProperties():SurgeryStepProperties		{			if(m_properties == null)			{				GMGDebugger.traceString("No properties defined at scene " + getQualifiedClassName(this) + 					  ". Add a SurgeryStepProperties element to the SurgeryStep object.");				m_properties = new SurgeryStepProperties();			}			return m_properties;		}				public function stepIsNamed(name:String):Boolean		{			return (getQualifiedClassName(this).indexOf(name) >= 0);		}	}	}