package src.scenes {		import flash.display.MovieClip;	import src.game.SurgeryStep;	import src.game.SoundManager;			public class MC_30 extends SurgeryStep {				private var m_goingDown:Boolean;		private var m_goingUp:Boolean;		private var m_lowestY:int = 0;		private var m_highestY:int = 0;		private var m_newY:int = 0;		private var m_oldY:int = 0;				private const DISTANCE_FOR_SHAKE:int = 100;				private var m_successfullShakes:int = 0;				public var shakeMonitor:MovieClip;				public function MC_30() {			shakeMonitor.stop();			scheduleForUpdate();		}				override public function update()		{			if(currentFrame == 30)			{				stop();				m_newY = mouseY;				if(m_newY > m_oldY)				{					if(!m_goingDown)					{						m_goingDown = true;						m_goingUp = false;						m_highestY = m_newY;												if(Math.abs(m_highestY - m_lowestY) >= DISTANCE_FOR_SHAKE)						{							m_successfullShakes++;							SoundManager.sharedManager().playSound(new Shakefoam());						}					}				}				else				{					if(!m_goingUp)					{						m_goingDown = false;						m_goingUp = true;						m_lowestY = m_newY;												if(Math.abs(m_highestY - m_lowestY) >= DISTANCE_FOR_SHAKE)						{							m_successfullShakes++;							SoundManager.sharedManager().playSound(new Shakefoam());						}					}				}				m_oldY = m_newY;								shakeMonitor.gotoAndStop(m_successfullShakes)				if(shakeMonitor.currentFrame == shakeMonitor.totalFrames)				{					gotoAndPlay(31);				}			}		}	}	}