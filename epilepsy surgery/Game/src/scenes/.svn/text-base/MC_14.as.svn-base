package src.scenes {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import src.game.GameLogic;	import src.game.SurgeryStep;		public class MC_14 extends SurgeryStep {				public function MC_14() {			doorb0.button.addEventListener(MouseEvent.CLICK, wrongAnswer);			doorb1.button.addEventListener(MouseEvent.CLICK, correctAnswer);			doorb2.button.addEventListener(MouseEvent.CLICK, wrongAnswer);			wrong0.mouseEnabled = false;			wrong0.mouseChildren = false;			wrong0.visible = false;			wrong2.mouseEnabled = false;			wrong2.mouseChildren = false;			wrong2.visible = false;			stop();		}				private function wrongAnswer(ev:MouseEvent)		{			GameLogic.sharedGameLogic().punishPlayer();			if(ev.target == doorb0.button)			{				wrong0.visible = true;				doorb0.removeEventListener(MouseEvent.CLICK, wrongAnswer);				doorb0.mouseEnabled = false;				doorb0.mouseChildren = false;			}			if(ev.target == doorb2.button)			{				wrong2.visible = true;				doorb2.removeEventListener(MouseEvent.CLICK, wrongAnswer);				doorb2.mouseEnabled = false;				doorb2.mouseChildren = false;			}		}				private function correctAnswer(ev:MouseEvent)		{			ev.target.removeEventListener(MouseEvent.CLICK, correctAnswer);			GameLogic.sharedGameLogic().showSceneByName(getProperties().nextSceneName);		}	}	}