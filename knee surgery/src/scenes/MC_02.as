package src.scenes {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import src.game.GameLogic;	import src.game.SurgeryStep;			public class MC_02 extends SurgeryStep {						public function MC_02() {			door0.button.addEventListener(MouseEvent.CLICK, wrongAnswer);			door1.button.addEventListener(MouseEvent.CLICK, wrongAnswer);			door2.button.addEventListener(MouseEvent.CLICK, correctAnswer);			wrong0.mouseEnabled = false;			wrong0.mouseChildren = false;			wrong0.visible = false;			wrong1.mouseEnabled = false;			wrong1.mouseChildren = false;			wrong1.visible = false;			stop();		}				private function wrongAnswer(ev:MouseEvent)		{			GameLogic.sharedGameLogic().punishPlayer();			if(ev.target == door0.button)			{				wrong0.visible = true;				door0.removeEventListener(MouseEvent.CLICK, wrongAnswer);				door0.mouseEnabled = false;				door0.mouseChildren = false;			}			if(ev.target == door1.button)			{				wrong1.visible = true;				door1.removeEventListener(MouseEvent.CLICK, wrongAnswer);				door1.mouseEnabled = false;				door1.mouseChildren = false;			}		}				private function correctAnswer(ev:MouseEvent)		{			ev.target.removeEventListener(MouseEvent.CLICK, correctAnswer);			GameLogic.sharedGameLogic().showSceneByName(getProperties().nextSceneName);			door2.mouseEnabled = false;			door2.mouseChildren = false;		}	}	}