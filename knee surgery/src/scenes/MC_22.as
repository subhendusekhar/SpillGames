package src.scenes {		import flash.display.MovieClip;	import src.game.SurgeryStep;	import flash.events.MouseEvent;		public class MC_22 extends SurgeryStep {				private var startDip = true;		private var waitForDip = true;				private var playingDip = false;				public function MC_22() {			(getChildByName("drag2") as MovieClip).gotoAndStop(2);			scheduleForUpdate();			drag2.mouseEnabled = false;			drag2.mouseChildren = false;		}				override public function update()		{			if(currentFrame == 27)			{				if(startDip)				{					startDip = false;					playingDip = false;					poteConLiquido.addEventListener(MouseEvent.MOUSE_MOVE, dipOver);					poteConLiquido.addEventListener(MouseEvent.MOUSE_OUT, dipOut);					stop();				}				else				{					if(waitForDip)					{						if(drag2.currentFrame == drag2.totalFrames)						{							waitForDip = false;							this.play();						}					}				}			}		}				private function dipOver(ev:MouseEvent)		{			if(!playingDip)			{				playingDip = true;				drag2.play();			}		}				private function dipOut(ev:MouseEvent)		{			if(playingDip)			{				drag2.stop();				playingDip = false;			}		}	}	}