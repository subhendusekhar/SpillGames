package src.scenes {		import flash.display.MovieClip;	import src.game.SurgeryStep;	import src.game.GameLogic;	import flash.events.MouseEvent;			public class MC_48 extends SurgeryStep {						public function MC_48() {			scheduleForUpdate();			slider7.addEventListener(MouseEvent.MOUSE_UP, mouseRelease);		}				override public function update()		{			eyeBG.gotoAndStop(slider7.currentXPortion);		}		private function mouseRelease(ev:MouseEvent)		{			if(slider7.currentXPortion >= 12 && slider7.currentXPortion <= 18)			{				GameLogic.sharedGameLogic().showSceneByName(getProperties().nextSceneName);			}			else			{				GameLogic.sharedGameLogic().punishPlayer();			}		}	}	}