package src.scenes {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import src.game.GameLogic;	import src.game.SurgeryStep;			public class MC_24 extends SurgeryStep {				private var touched1:Boolean = false;		private var touched2:Boolean = false;				public function MC_24() {			stop();			touch1.addEventListener(MouseEvent.MOUSE_MOVE, touchArea1);			touch2.addEventListener(MouseEvent.MOUSE_MOVE, touchArea2);			drag3.mouseEnabled = false;			drag3.mouseChildren = false;			scheduleForUpdate();		}				private function touchArea1(ev:MouseEvent)		{			if(!touched1)			{				touched1 = true;				wipe1.play();			}		}				private function touchArea2(ev:MouseEvent)		{			if(!touched2)			{				touched2 = true;				wipe2.play();			}		}				override public function update()		{			if(wipe1.currentFrame == wipe1.totalFrames &&			   wipe2.currentFrame == wipe2.totalFrames )			{				GameLogic.sharedGameLogic().showSceneByName(getProperties().nextSceneName);			}		}	}	}