package src.scenes {		import flash.display.MovieClip;	import src.game.SurgeryStep;	import flash.events.MouseEvent;	import src.game.GameLogic;		public class MC_07 extends SurgeryStep {				public function MC_07() {			door0.button.addEventListener(MouseEvent.CLICK, correctAnswer);			door1.button.addEventListener(MouseEvent.CLICK, wrongAnswer);			door2.button.addEventListener(MouseEvent.CLICK, wrongAnswer);			wrong2.mouseEnabled = false;			wrong2.mouseChildren = false;			wrong2.visible = false;			wrong1.mouseEnabled = false;			wrong1.mouseChildren = false;			wrong1.visible = false;			stop();		}				private function wrongAnswer(ev:MouseEvent)		{			GameLogic.sharedGameLogic().punishPlayer();			if(ev.target == door2.button)			{				wrong2.visible = true;				door2.removeEventListener(MouseEvent.CLICK, wrongAnswer);				door2.mouseEnabled = false;				door2.mouseChildren = false;			}			if(ev.target == door1.button)			{				wrong1.visible = true;				door1.removeEventListener(MouseEvent.CLICK, wrongAnswer);				door1.mouseEnabled = false;				door1.mouseChildren = false;			}		}				private function correctAnswer(ev:MouseEvent)		{			ev.target.removeEventListener(MouseEvent.CLICK, correctAnswer);			GameLogic.sharedGameLogic().showSceneByName(getProperties().nextSceneName);			door0.mouseEnabled = false;			door0.mouseChildren = false;		}	}	}