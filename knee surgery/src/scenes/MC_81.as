package src.scenes {		import flash.display.MovieClip;	import src.game.SurgeryStep;	import src.game.GameLogic;		public class MC_81 extends SurgeryStep {				private var m_count:int;		private const TIME_TO_WAIT:int = 30*1;				public function MC_81() {			if(GameLogic.sharedGameLogic().isHardMode())			{				scheduleForUpdate();			}		}				override public function update()		{			if(m_count < 30)			{				m_count++;			}			else			{				GameLogic.sharedGameLogic().showSceneByName(getProperties().nextSceneName);				this.unscheduleForUpdate();			}		}	}	}