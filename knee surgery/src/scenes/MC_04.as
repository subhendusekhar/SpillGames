package src.scenes {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import src.game.SurgeryStep;	import src.game.GameLogic;			public class MC_04 extends SurgeryStep {				private var activateButton:Boolean = true;				public function MC_04() {			scheduleForUpdate();		}				override public function update()		{			if(currentFrame == totalFrames)			{				if(activateButton)				{					stop();					xRayButton.takePicture.addEventListener(MouseEvent.CLICK, gotoNext);					activateButton = false;				}			}		}				private function gotoNext(ev:MouseEvent)		{			GameLogic.sharedGameLogic().showSceneByName(getProperties().nextSceneName);		}	}	}