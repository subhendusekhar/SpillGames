package src.scenes {		import flash.display.MovieClip;	import src.game.SurgeryStep;			public class MC_09 extends SurgeryStep {				private var m_goingDown:Boolean = false;		private var m_goingUp:Boolean = false;				private var m_highestY:int = 0;		private var m_lowestY:int = 0;				private var m_oldMouseY:int = 0;		private var m_newMouseY:int = 0;				private var m_oldAction:Boolean = false;		private var m_newAction:Boolean = false;				private var m_cooldown:Number = 0;				private var m_shakeCounter:Number = 0;				public function MC_09() {			button.visible = false;			scheduleForUpdate();		}				override public function update()		{			if(m_shakeCounter < 15)			{				m_oldMouseY = m_newMouseY;				m_newMouseY = this.mouseY;				if(m_oldMouseY > m_newMouseY)				{					m_cooldown = 0;					m_highestY = this.mouseY > m_highestY ? this.mouseY : m_highestY;					m_goingDown = true;					m_goingUp = false;				}				else if(m_oldMouseY < m_newMouseY)				{					m_cooldown = 0;					m_lowestY = this.mouseY < m_lowestY ? this.mouseY : m_lowestY;					m_goingDown = false;					m_goingUp = true;				}				else				{					m_goingUp = false;					m_goingDown = false;					m_cooldown++;					if(m_cooldown == 30)					{						m_highestY = this.mouseY;						m_lowestY = this.mouseY;					}				}								if(Math.abs(m_lowestY - m_highestY) > 150)				{					m_shakeCounter++;					trace(m_shakeCounter);					m_highestY = this.mouseY;					m_lowestY = this.mouseY;				}			}			else			{				button.visible = true;			}					}	}	}