package src.GLP{	import src.GLP.GLPDirectorCaller;		import flash.display.MovieClip;		import src.test.AppDelegate;		public class GLPApplication	{		// The application singleton		private static var m_sharedApplication:GLPApplication;				// No one should "new" this class.		public function GLPApplication()		{		}				// Method which will be callet to init the application configurations.		public function initApplication():Boolean		{			// No need for code here			return false;		}				// Method called after the application started.		public function applicationDidStart():Boolean		{			// No need for code here			return false;		}				// Get for the application singleton		public static function sharedApplication():GLPApplication		{			if(m_sharedApplication == null)			{				// We stablish an AppDelegate as the main application.				m_sharedApplication = new AppDelegate();			}			return m_sharedApplication;		}				// This method should be callet to start the application		public function run():int		{			if(initApplication() && applicationDidStart())			{				GLPDirectorCaller.sharedDirectorCaller().startMainLoop();			}			return 0;		}				// Neccesary for Flash to add this application to a frame		public function addApplicationToFrame(frame:MovieClip):void		{			frame.addChild(GLPDirectorCaller.sharedDirectorCaller());		}	}}