package src.elements {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import src.game.SurgeryStep;	import src.game.GameLogic;	import src.GLP.GMGDebugger;		public class PointerButton extends MovieClip 	{		public function PointerButton() 		{			this.addEventListener(MouseEvent.CLICK, onClick);		}				public function onClick(ev:MouseEvent)		{			ev.target.removeEventListener(MouseEvent.CLICK, onClick);			if (parent is SurgeryStep)			{				var parentStep:SurgeryStep = SurgeryStep(parent);				GameLogic.sharedGameLogic().showSceneByName(parentStep.getProperties().nextSceneName);			}			else			{				GMGDebugger.traceString("Parent is not a SurgeryStep: " + (parent as Class));			}		}	}}